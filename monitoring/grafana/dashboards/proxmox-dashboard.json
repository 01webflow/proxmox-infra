{
  "title": "Proxmox VE Dashboard",
  "tags": ["proxmox", "dashboard", "overview"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "editable": true,
  "panels": [
    {
      "id": 1,
      "title": "Node Summary - proxmox",
      "type": "row",
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 0},
      "collapsed": false
    },
    {
      "id": 2,
      "title": "CPU",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 0, "y": 1},
      "targets": [
        {
          "expr": "100 - (avg by (instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "legendFormat": "{{instance}}",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "Prometheus"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "green"},
              {"value": 70, "color": "yellow"},
              {"value": 90, "color": "red"}
            ]
          }
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      }
    },
    {
      "id": 3,
      "title": "Memory",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 4, "y": 1},
      "targets": [
        {
          "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
          "legendFormat": "{{instance}}",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "Prometheus"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "green"},
              {"value": 70, "color": "yellow"},
              {"value": 90, "color": "red"}
            ]
          }
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      }
    },
    {
      "id": 4,
      "title": "Disk",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 8, "y": 1},
      "targets": [
        {
          "expr": "(1 - (node_filesystem_avail_bytes{mountpoint=\"/\"} / node_filesystem_size_bytes{mountpoint=\"/\"})) * 100",
          "legendFormat": "{{instance}}",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "Prometheus"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "green"},
              {"value": 70, "color": "yellow"},
              {"value": 90, "color": "red"}
            ]
          }
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      }
    },
    {
      "id": 5,
      "title": "Uptime",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 12, "y": 1},
      "targets": [
        {
          "expr": "node_boot_time_seconds",
          "legendFormat": "{{instance}}",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "Prometheus"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "dtdurations",
          "min": 0
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      }
    },
    {
      "id": 6,
      "title": "Status",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 16, "y": 1},
      "targets": [
        {
          "expr": "up{job=\"node-exporter\"}",
          "legendFormat": "{{instance}}",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "Prometheus"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {"text": "offline", "color": "red"},
                "1": {"text": "online", "color": "green"}
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "red"},
              {"value": 1, "color": "green"}
            ]
          }
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      }
    },
    {
      "id": 7,
      "title": "CPU Details",
      "type": "stat",
      "gridPos": {"h": 3, "w": 6, "x": 20, "y": 1},
      "targets": [
        {
          "expr": "count(count(node_cpu_seconds_total) by (cpu))",
          "legendFormat": "Cores",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "Prometheus"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto"
      }
    },
    {
      "id": 8,
      "title": "VM Summary",
      "type": "row",
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 5},
      "collapsed": false
    },
    {
      "id": 9,
      "title": "Total VMs",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 0, "y": 6},
      "targets": [
        {
          "expr": "count(pve_vm_info)",
          "legendFormat": "Total",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "Prometheus"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      }
    },
    {
      "id": 10,
      "title": "Running",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 4, "y": 6},
      "targets": [
        {
          "expr": "count(pve_vm_info{status=\"running\"})",
          "legendFormat": "Running",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "Prometheus"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "palette-classic"
          }
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      }
    },
    {
      "id": 11,
      "title": "Stopped",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 8, "y": 6},
      "targets": [
        {
          "expr": "count(pve_vm_info{status=\"stopped\"})",
          "legendFormat": "Stopped",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "Prometheus"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      }
    },
    {
      "id": 12,
      "title": "Templates",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 12, "y": 6},
      "targets": [
        {
          "expr": "count(pve_vm_info{template=\"1\"})",
          "legendFormat": "Templates",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "Prometheus"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      }
    },
    {
      "id": 13,
      "title": "Storage Summary",
      "type": "row",
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 10},
      "collapsed": false
    },
    {
      "id": 14,
      "title": "Storages",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 11},
      "targets": [
        {
          "expr": "count(pve_storage_info)",
          "legendFormat": "Storages",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "Prometheus"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      }
    },
    {
      "id": 15,
      "title": "Total Storage",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 11},
      "targets": [
        {
          "expr": "sum(pve_storage_info{content=\"images\"})",
          "legendFormat": "Total",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "Prometheus"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decgbytes"
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      }
    },
    {
      "id": 16,
      "title": "Used Storage",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 11},
      "targets": [
        {
          "expr": "sum(pve_storage_info{content=\"images\"})",
          "legendFormat": "Used",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "Prometheus"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decgbytes"
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      }
    },
    {
      "id": 17,
      "title": "Available Storage",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 18, "y": 11},
      "targets": [
        {
          "expr": "sum(pve_storage_info{content=\"images\"})",
          "legendFormat": "Available",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "Prometheus"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decgbytes"
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      }
    },
    {
      "id": 18,
      "title": "Network Summary",
      "type": "row",
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 15},
      "collapsed": false
    },
    {
      "id": 19,
      "title": "Networks",
      "type": "stat",
      "gridPos": {"h": 4, "w": 8, "x": 0, "y": 16},
      "targets": [
        {
          "expr": "count(count(node_network_info) by (device))",
          "legendFormat": "Networks",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "Prometheus"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      }
    },
    {
      "id": 20,
      "title": "Network In",
      "type": "stat",
      "gridPos": {"h": 4, "w": 8, "x": 8, "y": 16},
      "targets": [
        {
          "expr": "sum(rate(node_network_receive_bytes_total{device!=\"lo\"}[5m]))",
          "legendFormat": "In",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "Prometheus"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps"
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      }
    },
    {
      "id": 21,
      "title": "Network Out",
      "type": "stat",
      "gridPos": {"h": 4, "w": 8, "x": 16, "y": 16},
      "targets": [
        {
          "expr": "sum(rate(node_network_transmit_bytes_total{device!=\"lo\"}[5m]))",
          "legendFormat": "Out",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "Prometheus"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps"
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      }
    }
  ],
  "templating": {
    "list": []
  },
  "annotations": {
    "list": []
  }
}

